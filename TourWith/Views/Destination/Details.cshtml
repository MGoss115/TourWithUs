@{
    ViewData["Title"] = "Home Page";
}

@model Destination

<main class="row">
  <div class="column">
    <h3>@Model.Location</h3>
    <img src="@Model.Image" alt="@Model.Location">
      <p>
          $@Model.Budget <br>
          @Model.Comment <br>
          @Model.Days 
      </p>
        <form action="/destinations/@Model.DestinationId/delete" method="post">
          <button type="submit" onclick="deleteMessage()" class="btn btn-danger">Delete</button>
          <button class="btn btn-secondary"><a href="/destinations">Go Back</a></button>
        </form>
  </div>
</main>