@model LoginUser
<h2>Login</h2>
<div class="row">
    <form action="/login" method="post">
        <section>
            <label for="LoginEmail">Email</label>
            <input type="email" name="LoginEmail" id="">
            <span asp-validation-for="LoginEmail"></span>
        </section>
        <section>
            <label for="LoginPassword">Password</label>
            <input asp-for="LoginPassword">
            <span asp-validation-for="LoginPassword"></span>
        </section>
        <button  class="ani btn btn-outline-dark">Login</button>
    </form>
</div>